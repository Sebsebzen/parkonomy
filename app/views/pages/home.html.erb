        <%= label_tag(:date, "From:", class: "col-form-label-sm") %>
        <%= date_field(:date, :start_date, class: "form-control") %>
        <%= label_tag(:date, "Until:", class: "col-form-label-sm") %>
        <%= date_field(:date, :end_date, class: "form-control") %>
        <%= submit_tag("Search", class: "btn btn-outline-success m-3") %>
      <% end %>

