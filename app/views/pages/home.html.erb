<div class="background-container">
  <div class="main-container">
    <div class="card-main-search">
      <div class="card-body">
        <h1 class="card-title">Search for carparks</h1>
        <p class="card-text mb-3">Find a second home for your car, wherever you are (in Singapore)</p>

        <%= form_tag("/search", method: "get") do %>
          <%= label_tag(:query, "Address:", class: "col-form-label-lg") %>
          <%= text_field_tag(:query, "", id: "search_address", class: "form-control mb-sm-2") %>
          <%= label_tag(:date, "From:", class: "col-form-label") %>
          <%= date_field(:date, :start_date, value: Date.today, class: "form-control mb-sm-2") %>
          <%= label_tag(:date, "Until:", class: "col-form-label") %>
          <%= date_field(:date, :end_date, value: (Date.today + 2.week), class: "form-control mb-sm-2") %>
          <div class="submit-button">
            <%= submit_tag("Search", class: "btn btn-outline-success") %>
          </div>
        <% end %>

