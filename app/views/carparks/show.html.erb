<br>
<div class ="container">
  <div class ="row">

    <div class="col-lg-8">
      <div class="card-trip">
      <img src=<%= @carpark.photo %>>
        <div class="card-trip-infos">
          <div>
            <h2><%=@carpark.address %></h2>
            <p>Length: <%=@carpark.length %>cm x Width: <%=@carpark.width %>cm x Height: <%=@carpark.height %>cm</p>
          </div>
          <h2 class="card-trip-pricing">Rate Per Day: $<%=@carpark.rate_day%></h2>
          <img src="https://kitt.lewagon.com/placeholder/users/krokrob" class="card-trip-user avatar-bordered" />
        </div>
      </div>      
    </div>

    <div class="col-lg-4">
      <div class="card-product-infos">
        <%= simple_form_for [@carpark, @booking], html: { class: 'form-group' } do |f| %>
          <%= f.input :start_date, as: :date, html5: true, class: "form-control" %>
          <%= f.input :end_date, as: :date, html5: true, class: "form-control" %>
          <%= f.submit "Reserve now", class: "btn btn-outline-success"%>
        <% end %>
      </div>      
    </div>
  </div>
  <br>
  <div>
  <%= link_to "Back To All Carparks", carparks_path, class: "btn btn-primary btn-sm" %>
  </div>
  <div>
  <%= link_to "Edit Carpark", edit_carpark_path, class: "btn btn-primary btn-sm" %>
  </div>

</div>