<div
  id="map"
  style="width: 100%;
  height: 300px;"
  data-markers="<%= @markers.to_json %>"
  data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
></div>
<div class="container">
  <div class="d-flex justify-content-center my-5">
    <h1 class="display-4">All matching Carparks for "<%= params[:query] %>"</h1>  
  </div>
    <div class="cards">
      <% @carparks.each do |carpark| %>
        <%= link_to carpark_path(carpark), :style => "text-decoration: none" ,:action => 'go' do %>
          <div class="card-category text-center" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= carpark.photo %>)"><%= carpark.address %>
          </div>
        <% end %>
      <% end %>
    </div>
</div>