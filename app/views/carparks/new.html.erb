<div class="container">
	<div class="row justify-content-center">
		<h1 class="head text-center">Please create your carpark</h1>
	</div>
	<hr>
	<div class="row justify-content-center">
		<div class="col-md-4 card-product-infos m-2" id="create-carpark-form-container">
			<%= simple_form_for(@carpark) do |f| %>
        <div class="form-inputs">
        <%= f.input :address %>
          <%= f.input :length %>
          <%= f.input :width %>
          <%= f.input :height %>
          <%= f.input :rate_day %>
			  </div>

			  <div class="form-actions">
			    <%= f.button :submit, :class => "btn btn-primary btn-lg btn-block"%>
			  </div>
			<% end %>
		</div>
	</div>
</div>
<br>
<%= link_to "Back To Home", root_path, class: "btn btn-primary btn-sm" %>

