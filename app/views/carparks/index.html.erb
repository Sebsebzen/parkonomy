<div
  id="map"
  style="width: 100%;
  height: 500px;
  box-shadow: 0 0 15px rgba(0, 0, 0, 0.2);"
  data-markers="<%= @markers.to_json %>"
  data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
></div>
<div class="container">
  <div class="d-flex justify-content-center my-5">
    <% if @carparks.length > 0 %>
      <h1 class="display-4">All Carpark Listings</h1>
    <% else %>
      <h1 class="display-4">No  matching result for <%= params[:query].capitalize %> </h1>
    <% end %>
  </div>
    <div class="cards">
      <% @carparks.each do |carpark| %>
        <%= link_to carpark_path(carpark), :style => "text-decoration: none" ,:action => 'go' do %>
          <div class="card-category text-center" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= carpark.photo %>)"><%= carpark.address %>
          </div>
        <% end %>
      <% end %>
    </div>
</div>
